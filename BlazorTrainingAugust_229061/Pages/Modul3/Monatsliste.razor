@page "/monate"
<div class="container">
    <h3>Monatsliste</h3>

    <div class="row">
        <div class="col-12 col-md-6">
            <h2>@Monat</h2>
        </div>
        <div class="col-12 col-md-6">
            <ul class="list-group">
                <li class="list-group-item active">Monate </li>
                    @for (int i = 0; i < 12; i++)
                {
                    var m = i;
                    <li class='list-group-item list-group-item-action @(Monat==DateTime.Now.AddMonths(i).ToString("MMMM")?"active":"")'
                    @onclick="()=>Select(m)">
                        @DateTime.Now.AddMonths(i).ToString("MMMM")
                    </li>
                    }
               
            </ul>
        </div>

    </div>
</div>


@code {
    string Monat;
    void Select(int m)
    {
        Monat= DateTime.Now.AddMonths(m).ToString("MMMM");

    }
}
