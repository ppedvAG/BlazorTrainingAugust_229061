    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input @bind="eingabe" class="form-control"></input>
          
        </div>
    </div>


</ModalPPEDV>
@code {
    ModalPPEDV modal1;
    string eingabe;
